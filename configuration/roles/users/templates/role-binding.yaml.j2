apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: {{ operation_on_user }}-rolebinding
  namespace: {{ item.name }}
subjects:
- kind: User
  name: {{ operation_on_user }}
  apiGroup: rbac.authorization.k8s.io
roleRef:
  kind: ClusterRole
  name: {{ item.role }}
  apiGroup: rbac.authorization.k8s.io
